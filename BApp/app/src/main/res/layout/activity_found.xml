<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_found"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbcbcb"
    android:orientation="vertical"
    tools:context="com.lanou.taochangjun.gift.projectbapp.found.FoundActivity">

    <LinearLayout
        android:id="@+id/home_search_Linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        >


        <RelativeLayout
            android:id="@+id/home_search_RelativeLayout"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/home_search_big"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/search_icon"/>


            <EditText
                android:id="@+id/home_search_EditText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/home_search_big"
                android:background="@null"
                android:hint="搜索频道或视频"
                android:singleLine="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/home_search_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:text="取消"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_search_down_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="搜索历史"/>

            <ImageView
                android:id="@+id/home_search_delete"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_margin="10dp"
                android:src="@mipmap/search_history_delete"/>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/found_rv">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>



</LinearLayout>
